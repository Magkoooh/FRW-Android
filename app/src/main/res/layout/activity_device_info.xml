<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleCentered="true"
        app:titleTextAppearance="@style/ToolbarTextAppearance"
        app:titleTextColor="@color/text"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_map_layout"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/deep_bg"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mv_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:gravity="center"
        android:textColor="@color/text_2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cv_map_layout"
        tools:text="Iphone"/>

    <TextView
        android:id="@+id/tv_device_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="18dp"
        android:fontFamily="@font/inter"
        android:textColor="@color/text_3"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="@string/device_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="18dp"
        app:cardBackgroundColor="@color/profile_card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_device_title">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <io.outblock.lilico.page.profile.widget.ProfilePreference
                android:id="@+id/pp_device_application"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/device_application"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/profile_card_divider"/>

            <io.outblock.lilico.page.profile.widget.ProfilePreferenceState
                android:id="@+id/pp_device_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/device_ip_address"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/profile_card_divider"/>

            <io.outblock.lilico.page.profile.widget.ProfilePreference
                android:id="@+id/pp_device_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/device_location"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/profile_card_divider"/>

            <io.outblock.lilico.page.profile.widget.ProfilePreference
                android:id="@+id/pp_device_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/device_entry_date"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>